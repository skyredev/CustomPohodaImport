{
	"root": true,
	"env": {
		"es2022": true,
		"node": true,
		"jquery": true,
		"browser": true
	},
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": ["error", "unix"],
		"semi": ["error", "always"]
	},
	"overrides": [
		{
			"extends": ["eslint:recommended"],
			"files": ["*.js"],
			"globals": {
				"_": "readonly",
				"Espo": "readonly",
				"define": "readonly",
				"extend": "readonly",
				"Backbone": "readonly"
			},
			"rules": {
				"no-unused-vars": [
					"error",
					{
						"vars": "all",
						"args": "all",
						"argsIgnorePattern": "^_"
					}
				]
			}
		},
		{
			"files": ["*.ts"],
			"plugins": ["@typescript-eslint"],
			"parser": "@typescript-eslint/parser",
			"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
			"rules": {
				"no-unused-vars": "off",
				"@typescript-eslint/no-explicit-any": "off",
				"@typescript-eslint/ban-ts-comment": [
					"error",
					{
						"ts-ignore": "allow-with-description"
					}
				]
			}
		}
	]
}
